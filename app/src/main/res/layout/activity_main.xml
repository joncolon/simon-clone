<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nyc.c4q.jonathancolon.simonclone.MainActivity"
    android:background="#000000">


    <TextView
        android:text="00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roundcounter"
        tools:text="00"
        android:textSize="40sp"
        android:textColor="#ff1744"
        android:gravity="center"
        android:layout_marginBottom="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#000000">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:srcCompat="@drawable/green_dim"
            android:id="@+id/imageView15"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:srcCompat="@drawable/red_dim"
            android:id="@+id/imageView16"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center"
        android:background="#000000">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:srcCompat="@drawable/blue_dim"
            android:id="@+id/imageView17"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:srcCompat="@drawable/yellow_dim"
            android:id="@+id/imageView18"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

    </LinearLayout>




</LinearLayout>
